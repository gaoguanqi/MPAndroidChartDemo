<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maple.smaple.mpandroidchartdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/layout_title_bar"/>

        <Button
            android:id="@+id/btn_lineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="折线图" />
        <Button
            android:id="@+id/btn_barChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="条形图" />
        <Button
            android:id="@+id/btn_combinedChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="条形折线图" />
        <Button
            android:id="@+id/btn_pieChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆饼图" />
        <Button
            android:id="@+id/btn_scatterChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雷达图" />
        <Button
            android:id="@+id/btn_candleStickChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="K线图" />
        <Button
            android:id="@+id/btn_bubbleChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="泡泡图" />
        <Button
            android:id="@+id/btn_radarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网状图" />
    </LinearLayout>


</ScrollView>
