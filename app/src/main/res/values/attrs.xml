<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="spot_color" format="color" />
        <attr name="spot_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProcessButton">
        <attr name="complete_text" format="string" />
        <attr name="error_text" format="string" />
        <attr name="progress_color" format="color" />
        <attr name="complete_color" format="color" />
        <attr name="error_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FlatButton">
        <attr name="pressed_color" format="color" />
        <attr name="normal_color" format="color" />
        <attr name="radius_corner" format="dimension" />
    </declare-styleable>


    <!--page-->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DashboardView">
        <attr name="padding" format="dimension"/>
        <attr name="progressStrokeWidth" format="dimension"/>
        <attr name="android:text"/>
        <attr name="unit" format="string"/>
        <attr name="android:textSize"/>
        <attr name="backgroundColor" format="color" />
        <attr name="textColor" format="color"/>
        <attr name="startProgressColor" format="color" />
        <attr name="endProgressColor" format="color" />
        <attr name="startNumber" format="integer" />
        <attr name="maxNumber" format="integer" />
        <attr name="progressColor" format="color"/>
        <attr name="tikeStrArray" format="reference"/>
        <attr name="tikeStrSize" format="dimension"/>
        <attr name="tikeStrColor" format="color"/>
        <attr name="centerCircleColor" format="color"/>
    </declare-styleable>
</resources>